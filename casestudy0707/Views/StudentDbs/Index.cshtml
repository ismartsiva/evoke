@model IEnumerable<casestudy0707.Models.StudentDb>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScienceMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MathsMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScienceMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MathsMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Rno">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Rno">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Rno">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
